    <corners android:radius="10dp" /> <!-- Cambia el radio de los bordes del LinearLayout padre -->
    <stroke
        android:width="2dp"
        android:color="#078A0D" /> <!-- Cambia el color y el ancho del borde del LinearLayout padre -->
